extends base

block title
        title PickIt Login

block content
        +navBar(False)

        if errorMsg
                h6.error-msg #{errorMsg}

        form(method="GET", action="/api/login")
                div.form-group
                        label(for="username") Username:
                        input#username.form-control(type="text", placeholder="username", name="username")
                div.form-group
                        label(for="password") Password
                        input#password.form-control(type="password", placeholder="password", name="password")
                button.btn.btn-primary(type="submit") Login

